body
  color $dark-blue
  font-family: $base-font
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-weight: 400
  font-size: 18px

  +media('md')
    font-size: 15px

  +media('xs')
    font-size: 12px

  .code
    font-family: $title-font
    color $dark-blue

  h1, h2, h3, h4, h5, h6, .title
    font-family: $title-font
    color: $green-blue

  .uppercase
    text-transform: uppercase

  .h0
    font-size: 3.2em

  h1, .h1
    font-size: 2em
    margin: 0.5em 0

  h2, .h2
    font-size: 1.4em
    margin: 0.3em 0

  h3, .h3
    font-size: 1.2em
    margin: 0.2em 0

  h4, .h4
    font-size: 1.1em
    margin: 0.1em 0

  p
    font-size: 1em

#app
  display: flex
  flex-direction: column
  align-items: center

  .app-inner
    height: 99vh
    width: 90%
    display: flex
    justify-content: space-between
    flex-direction: column
    min-height: min-content

a
  font-family: $title-font
  // text-transform: uppercase
  color: $green-blue

  &:hover
    color: darken($green-blue, 30%)

canvas
  position: absolute
  top: 0
  left: 0
  z-index: -1
  width: 100%
  height: 100%
  opacity: 0.5

section
  max-width: $mid-width
  width: 100%