body
  color $font-color
  font-family: $base-font
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-weight: 400
  font-size: 18px

  +media('md')
    font-size: 15px

  +media('xs')
    font-size: 13px

  strong
    color: darken($font-color, 10%)
    font-weight: 600

  .code
    font-family: $title-font
    color $font-color
    font-weight: 600

  h1, h2, h3, h4, h5, h6, .title
    font-family: $title-font
    color: $accent
    margin-top: 0

    &.standard-color
      color: $font-color

  .uppercase
    text-transform: uppercase

  .h0
    font-size: 3.2em

  h1, .h1
    font-size: 2em
    margin: 0 0 0.5em

  h2, .h2
    font-size: 1.4em
    margin: 0 0 0.2em

  h3, .h3
    font-size: 1.2em
    margin: 0 0 0.15em

  h4, .h4
    font-size: 1.1em
    margin: 0 0 0.1em

  h5, .h5
    font-size: 1em
    margin: 0 0 0.08em

  p
    font-size: 1em
    margin-bottom: 1.5em

    &.sm
      font-size: 0.8em

  ul, blockquote
    margin-bottom: 0.5em
    margin-top: 0.5em

  ul
    list-style: none
    padding: 0 0 0 14px
    margin: 5px 30px 0 0

    li
      display: flex
      align-items: center
      margin-bottom: 5px
      margin-left: 15px
      font-family: $base-font
      font-size: 0.8em

      // &:before
      //   content: ""
      //   // content: "==="
      //   color: $orange-light
      //   font-weight: bold
      //   display: inline-block
      //   width: 2em
      //   font-size: 0.5em
      //   margin-left: -0.8em

  button, .btn
    background: transparent
    border: 2px solid $accent
    cursor: pointer
    color: $accent
    padding: 5px 10px
    font-size: 0.8em
    text-decoration: none

    &:hover
      border-color: $orange-light
      color: $orange-light

      &:active
        border-color: lighten($orange-light, 20%)
        color: lighten($orange-light, 20%)

#app
  width: 100vw
  height: 100vh
  overflow: scroll
  display: flex
  flex-direction: column
  align-items: center

  &.stuck
    overflow: hidden
    .app-inner
      overflow: hidden

  .app-inner
    height: 99vh
    width: 90%
    padding-top: 6vh;
    display: flex
    justify-content: space-between
    align-items: center
    flex-direction: column
    min-height: min-content


a
  // font-family: $title-font
  // text-transform: uppercase
  color: $green-blue // green-blue

  &:hover
    color: $orange-light

canvas
  position: fixed
  top: 0
  left: 0
  z-index: -1
  width: 100%
  height: 100%
  opacity: 0.5

section
  max-width: $mid-width
  width: 100%
  padding: 35px 0