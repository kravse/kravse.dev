 @import 'mixins'

@keyframes caret
  50%
    border-color: transparent

.home
  height: 100vh
  display: flex
  justify-content: center
  text-align: center

  .hero
    padding: 10px 20px 10px
    margin-top: 32vh

  h1
    margin-top: 0
    font-size:27px
    overflow: hidden
    white-space: nowrap
    padding: 5px 0;
    display: flex
    align-items: center
    line-height: 1.2em

    .cursor
      margin: -0.1em 0 0 0.2em
      height: 1.2em
      display: inline-block
      border-right: .5em solid #43aa8b

      &.blink
        animation: caret .5s step-end infinite alternate

    +media('xs')
      font-size:18px

  p
    margin-bottom: 0
    font-size:18px
    text-transform: uppercase

    +media('xs')
      font-size: 14px
  svg
    width:100%;

