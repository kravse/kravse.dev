@import '~@/assets/styles/mixins'
@import '~@/assets/styles/variables'

@keyframes caret
  50%
    border-color: transparent

.home
  max-width: $mid-width
  width: 100%

  section
    margin-bottom: 40px
    border-bottom: 3px solid $orange-light

  .hero
    padding: 25px 0 0

    h1, code
      margin-left: -0.1em

    h1
      margin-bottom: 0
      font-size: 4.5em

    code
      overflow: hidden
      white-space: nowrap
      padding: 5px 0;
      margin: 0;
      display: flex
      align-items: center
      line-height: 1.2em
      font-size: 1em

      .spacer
        opacity: 0
        width: 0
        overflow: 0

      .cursor
        margin: -0.1em 0 0 0.2em
        height: 1.2em
        display: inline-block
        border-right: .5em solid
        color: $orange-light

        &.blink
          animation: caret .5s step-end infinite alternate

  .sub
    margin: 0
    font-size: 1em
    font-weight: 400

  .lists
    display: flex
    flex-wrap: wrap

    h4
      margin: 0 0 0 5px
      color: $dark-blue

    ul
      padding: 0 0 0 20px
      margin: 15px 30px 0 0

      li
        margin-bottom: 5px
        font-family: $base-font


dump_media_cache()