@import '~@/assets/styles/mixins'
@import '~@/assets/styles/variables'

#work
  position: absolute
  left: 0
  top: 0
  z-index: 10
  transform: translateX(0)
  transition: transform 0.3s cubic-bezier(.74, .06, .4, .92)// , width 0.2s ease


  .home-button
    position: absolute
    top: 0
    left: 100%
    padding-left: 10px
    color: $dark-blue
    text-decoration: none
    font-size: 3em
    height: 100%;
    width: 20vw;

    &:hover
      color: $accent

  h1, h2, h3, h4, h5, h6, p, ul, li, strong
    color: $soft-yellow

  ul
    margin-right: 0

    li
      display: flex
      align-items: flex-start
      margin-bottom: 10px

      &:before
        content: "==="
        margin-top: 0.2em
        color: $orange-light
        font-weight: bold
        display: inline-block
        font-size: 0.8em
        margin-left: -0.8em
        transform: translateX(-5px)

  .work-content
    position: relative
    z-index: 2

    .slide
      position: relative
      opacity: 0
      background: $dark-blue
      height: 100vh
      width: 65vw
      animation: fadein 0s 0.4s ease forwards
      z-index: 0
      display: flex
      justify-content: center
      overflow-y: scroll
      padding: 40px 30px 100px

      +media('md')
        width: 80vw

      +media('xs')
        width: 85vw

      .copy
        position: absolute
        top: 0
        max-width: $mid-width
        padding: 40px 30px

        +media('xs')
          padding: 25px 20px 50px

        h3
          margin-top: 20px

    &::before
      content: ''
      display: block
      position: absolute
      top: 0
      left: 0
      z-index: 1
      height: 100%
      width: 80vw
      background-color: $green-blue
      animation: animateIn 0.8s cubic-bezier(.74, .06, .4, .92) forwards

  // &.fade-enter-active,
  &.fade-leave-active
    transition: transform 0.5s ease translateY(100%)
    // opacity: 0
    transform: translateX(-100%)

  // &.fade-enter,
  &.fade-leave-to
    // opacity: 0
    transform: translateX(-100%)



