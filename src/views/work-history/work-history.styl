@import '~@/assets/styles/mixins'
@import '~@/assets/styles/variables'

#work
  position: absolute
  left: 0
  top: 0
  z-index: 10
  transform: translateX(0)
  transition: transform 0.3s cubic-bezier(.74, .06, .4, .92)

  .home-button
    position: absolute
    top: 0
    left: 100%
    padding-left: 10px
    color: $bg-dark
    text-decoration: none
    font-size: 3em
    height: 100%;
    width: 20vw;

    &:hover
      color: $alt-accent

  h1, h2, h3, h4, h5, h6, p, ul, li, strong
    color: lighten($bg-color, 25%)

  ul
    margin-right: 0

    li
      display: flex
      align-items: flex-start
      margin-bottom: 10px

      &:before
        content: "==="
        margin-top: 0.1em
        color: $alt-accent
        font-weight: bold
        display: inline-block
        font-size: 0.9em
        margin-left: -0.8em
        transform: translateX(-5px)

  .work-content
    position: relative
    z-index: 2

    .slide
      position: relative
      opacity: 0
      background: $bg-dark
      height: 100vh
      width: 65vw
      animation: fadein 0s 0.4s ease forwards
      z-index: 0
      display: flex
      justify-content: center
      overflow-y: scroll
      overflow-x: hidden
      padding: 40px 30px 100px
      scrollbar-width: none
      -webkit-overflow-scrolling: touch

      &::-webkit-scrollbar
        display: none

      +media('md')
        width: 80vw

      +media('xs')
        width: 85vw

      .copy
        position: absolute
        top: 0
        max-width: $mid-width
        padding: 40px 30px
        min-height:1000px

        +media('xs')
          padding: 40px 15px 60px

        h3
          margin-top: 20px

    &::before
      content: ''
      display: block
      position: absolute
      top: 0
      left: 0
      z-index: 1
      height: 100%
      width: 80vw
      background-color: $accent
      animation: animateIn 0.8s cubic-bezier(.74, .06, .4, .92) forwards

  &.fade-leave-active
    transition: transform 0.5s ease
    transform: translateX(-100%)

  &.fade-leave-to
    transform: translateX(-100%)



